{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "gunicorn --timeout 300 --workers 1 --threads 2 --worker-class gthread --max-requests 1000 --max-requests-jitter 100 wsgi:application",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}


